#!/bin/bash

set -e

SCRIPT_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )

filename=$(mktemp "${SCRIPT_DIR}/search-results/$(date +%Y-%m-%dT%H:%M:%S)-XXXXXXXX.txt")

git grep $@ -- \
  ':(exclude)tools' \
  ':(exclude)conformance-checkers' \
  ':(exclude)docs' \
  ':(exclude)*.min.js' \
  ':(exclude)*-ref.*' \
  ':(exclude)*-notref.*' > $filename

cat $filename > ${filename}-orig

vim $filename
